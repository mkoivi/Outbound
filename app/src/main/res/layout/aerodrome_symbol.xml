<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="38dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/qnhad"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1022"
                    android:textColor="@android:color/black"
                    android:textSize="9sp"
                    android:typeface="normal"
                    tools:textColor="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/cb"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/lightning2" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/weather_icons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/wind_direction"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentBottom="true"
                        android:baselineAlignBottom="false"
                        app:srcCompat="@drawable/arrow" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/clouds"
                    android:layout_width="11dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cloud" />

                <ImageView
                    android:id="@+id/visibility"
                    android:layout_width="10dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-2dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/visibility" />



            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/num_txt"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:gravity="center_horizontal"
            android:text="EFHF"
            android:textColor="#a739ae"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/runway_symbol"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:rotation="0"
            android:src="@drawable/aerodrome" />

    </LinearLayout>

</RelativeLayout>